@{
    ViewData["Title"] = "Home Page";
}

<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.88.1">
    <title>Izipay</title>

    <!-- BOOTSTRAP   -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto">
</head>
<body class="bg-light">
    <div class="container">
        <main>
            <div class="py-5 text-center">
                <h2>Pasarela de Pagos</h2>
            </div>

            <div class="row g-5">
                <div class="col-md-7 col-lg-8">
                    <form class="needs-validation" novalidate="" method="post" action="/Payment/">
                        <div class="row g-3">

                            @*NOMBRE*@
                            <div class="col-sm-6">
                                <label for="firstName" class="form-label">Nombre</label>
                                <input name="txt_nombre" type="text" class="form-control" id="firstName" placeholder="Escribe tu nombre" value="" required="">
                            </div>
                            @*APELLIDO*@
                            <div class="col-sm-6">
                                <label for="lastName" class="form-label">Apellido</label>
                                <input name="txt_apellido" type="text" class="form-control" id="lastName" placeholder="Escribe tu apellido" value="" required="">
                            </div>
                            @*EMAIL*@
                            <div class="col-sm-6">
                                <label for="email" class="form-label">Correo</label>
                                <input name="txt_correo" type="text" class="form-control" id="email" placeholder="Escribe tu correo" value="" required="">
                            </div>

                            @*MONTO*@
                            <div class="col-sm-6">
                                <label for="amount" class="form-label">Monto Total</label>
                                <input name="txt_monto" type="text" class="form-control" id="amount" placeholder="S/." value="" required="">
                            </div>


                            @*MONEDA*@
                            <div class="col-sm-6">
                                <label for="coin" class="form-label">Moneda</label>
                                <input name="Moneda" type="text" class="form-control" id="coin" placeholder="PEN" value="PEN" readonly="readonly">
                            </div>

                        </div>

                        <hr class="my-4">

                        <button class="w-100 btn btn-primary btn-lg" type="submit">Finalizar con el Pago</button>
                    </form>
                </div>
            </div>
        </main>
    </div>
</body>
</html>